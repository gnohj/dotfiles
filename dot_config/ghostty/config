# fonts
font-family = "Hasklug Nerd Font Mono Med"
# font-family = "RobotoMono Nerd Font"
# font-family = "JetBrainsMono Nerd Font"
font-family-italic = "Cartograph CF Italic"
adjust-cell-width = -5%
adjust-cell-height = 10%
adjust-underline-thickness = 40%
adjust-cursor-thickness = 150%
font-size = 15
font-thicken = true

# cursor
shell-integration-features = no-cursor
cursor-style = block
cursor-style-blink = false

# quick terminal
keybind = global:cmd+s=toggle_quick_terminal
keybind = cmd+s=toggle_quick_terminal
quick-terminal-animation-duration = 0.08
quick-terminal-size = 25%
quick-terminal-position = top

# Ensure zsh runs as login shell to source Nix profile
# This is especially important when Ghostty starts at login
command = /bin/zsh --login

# window
gtk-titlebar = false
mouse-hide-while-typing = true
macos-titlebar-style = hidden
window-decoration = true

window-padding-balance = true
window-padding-x = 20,20
window-padding-y = 20,8
macos-window-shadow = false
macos-option-as-alt = right

# ghosty specific keybinds only
keybind = super+i=inspector:toggle
keybind = super+r=reload_config
keybind = super+k=clear_screen
keybind = super+shift+s=toggle_secure_input

# clipboard
clipboard-read = "allow"
clipboard-trim-trailing-spaces = true
clipboard-write = "allow"

# misc
confirm-close-surface = false
auto-update = off
quit-after-last-window-closed = true

# Disable automatic secure keyboard entry for password prompts
# This prevents conflicts with skhd
shell-integration = detect
shell-integration-features = no-sudo

keybind = shift+enter=text:\n

