# custom-shader = ./shaders/glow.glsl
custom-shader = ./shaders/bloom025.glsl
# custom-shader = ./shaders/cursor_blaze.gsl
custom-shader = ./shaders/cursor_smear_fade.glsl
# custom-shader = ./shaders/cursor_smear.gsl
