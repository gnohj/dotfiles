[user]
	email = gnohj@users.noreply.github.com
	name = gnohj

[alias]
  co = checkout
  cob = checkout -b
  b = branch
  pr = "!f() { git fetch -fu ${2:-upstream} refs/pull/$1/head:pr/$1 && git checkout pr/$1; }; f"
  pr-clean = "!git checkout master ; git for-each-ref refs/heads/pr/* --format=\"%(refname)\" | while read ref ; do branch=${ref#refs/heads/} ; git branch -D $branch ; done"
  dt = "! args=$@; shift $#; nvim -c \"CodeDiff $args\"" # diff view tool

[url "https://"]
  insteadOf = git://

[pull]
	ff = only

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[gpg]
	program = gpg2

[core]
	pager = delta
  excludesfile = ~/.gitignore_global

[interactive]
	diffFilter = delta --color-only

[merge]
	conflictstyle = diff3
	tool = codediff

[mergetool "codediff"]
	cmd = nvim "$MERGED" -c "CodeDiff merge \"$MERGED\""
	trustExitCode = true

[mergetool]
	keepBackup = false

[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta

[include]
	path = ~/.config/delta/themes/themes.gitconfig
[delta]
  features = gnohj-theme
  navigate = true
	line-numbers = true
	side-by-side = true
